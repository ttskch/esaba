<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title>
        {% block title %}{#
            #}{% block subtitle %}{% endblock %}{#
            #}{% if block('subtitle') is not empty %} | {% endif %}{#
            #}{% block site_title %}esaba{% endblock %}{#
        #}{% endblock %}
    </title>
    <meta name="description" content="{{ block('subtitle') }}">
    <link rel="canonical" href="{{ global.request.uri }}">

    <link rel="shortcut icon" href="{{ asset('img/esa/toriatama.png') }}" type="image/x-icon">

    <meta property="og:title" content="{{ block('title') }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="">
    <meta property="og:url" content="{{ global.request.uri }}">
    <meta property="og:site_name" content="{{ block('title') }}">
    <meta property="fb:admins" content="">
    <meta property="fb:app_id" content="">
    <meta property="og:description" content="{{ block('subtitle') }}">

    <link href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="{{ asset('lib/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/select2/css/select2.min.css') }}" rel="stylesheet">
    {#<link href="{{ asset('lib/select2-bootstrap-theme/select2-bootstrap.min.css') }}" rel="stylesheet">#}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">

    {% block style_sheets %}
    {% endblock %}
</head>

<body>
{% block body %}
    <nav class="navbar navbar-expand-md navbar-light bg-secondary">
        <div class="container">
            <a class="navbar-brand text-white" href=".">
                <img src="{{ asset('img/esa/toriatama.png') }}" alt="esa" class="mr-2" style="height:25px; width:auto;">
                {{- block('site_title') }}
            </a>
            {#<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-label="Toggle navigation">#}
            {#<i class="fa fa-bars"></i>#}
            {#</button>#}
            {#<div class="collapse navbar-collapse" id="navbar-collapse-1">#}
            {#<ul class="navbar-nav">#}
            {#<li class="nav-item"><a href="" class="nav-link">Something</a></li>#}
            {#</ul>#}
            {#</div>#}
        </div>
    </nav>
    <div class="container">
        <div id="content" class="my-3 mb-5">
            {% block flashes %}
                {% if global.session.flashbag.peekAll|length > 0 %}
                    {% for type, messages in global.session.flashbag.all %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            {% endblock %}

            {% block content %}
            {% endblock %}
        </div>
    </div>
    <footer class="bg-light clearfix py-3">
        <div class="container">
            {% block footer %}
                <div class="small">
                    <div class="float-none float-md-left">
                        Powered by <a href="https://github.com/ttskch/esaba" target="_blank"><i class="fa fa-github"></i> ttskch/esaba</a>
                    </div>
                    <div class="cc float-none float-md-right">
                        <a href="https://docs.esa.io/posts/125" target="_blank">Logos of esa.io</a>
                        are licensed under
                        <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/4.0/" target="_blank">CC BY-NC-ND 4.0</a>
                        <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/4.0/" target="_blank">
                            <img alt="Creative Commons License" style="border:none" src="https://i.creativecommons.org/l/by-nc-nd/4.0/80x15.png" />
                        </a>
                    </div>
                </div>
            {% endblock %}
        </div>
    </footer>

    <script src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('lib/popper.js/umd/popper.min.js') }}"></script>
    <script src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('lib/select2/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>

    {% block scripts %}
    {% endblock %}
{% endblock body %}
</body>
</html>
